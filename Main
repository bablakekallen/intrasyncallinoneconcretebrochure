    <script>
        // ROI Calculator
        document.addEventListener('DOMContentLoaded', function() {
            const revenueInput = document.getElementById('revenue');
            const trucksInput = document.getElementById('trucks');
            const adminInput = document.getElementById('admin-hours');
            const savingsDisplay = document.getElementById('total-savings');
            
            function calculateROI() {
                const revenue = parseFloat(revenueInput.value) || 0;
                const trucks = parseFloat(trucksInput.value) || 0;
                const adminHours = parseFloat(adminInput.value) || 0;
                
                // Calculate savings
                const revenuIncrease = revenue * 0.125; // 12.5% average
                const fleetSavings = trucks * 15000; // $15k per truck annually
                const adminSavings = adminHours * 52 * 30 * 0.55; // 55% reduction at $30/hour
                
                const totalSavings = revenuIncrease + fleetSavings + adminSavings;
                
                // Format and display
                savingsDisplay.textContent = '$' + totalSavings.toLocaleString('en-US', {
                    maximumFractionDigits: 0
                });
            }
            
            // Add event listeners
            [revenueInput, trucksInput, adminInput].forEach(input => {
                if (input) {
                    input.addEventListener('input', calculateROI);
                }
            });
            
            // Initial calculation
            calculateROI();
        });
    </script>
</body>
</html>
